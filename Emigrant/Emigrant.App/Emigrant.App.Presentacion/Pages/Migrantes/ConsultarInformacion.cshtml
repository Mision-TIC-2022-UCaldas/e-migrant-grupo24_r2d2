@page
@model Emigrant.App.Presentacion.Pages.ConsultarInformacionModel
@{
}




<div class="content-wrapper" style="display:flex; justify-content:center; align-items:start; background-color:#FFFFFF;">
  <div class="container-fluid">
    <div class="row" style="justify-content:center;">
      <div class="col-md-12" style="padding-top:1rem; padding-left:1rem; padding-right:1rem; ">
  
        <div class="card">
          <div class="card-header" style="background-color:#FCC16D; border-style:none; color:#000000;">
            <h3 class="card-title">Migrante</h3>

            <div class="card-tools">
              <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                <i class="fas fa-minus"></i>
              </button>
            </div>
          </div>
          <!-- /.card-header -->
          <div class="card-body table-responsive p-0">
            <table class="table table-hover text-nowrap">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>Apellido</th>
                  <th>Correo</th>
                  <th>Direccion</th>
                  <th>Pais Origen</th>
                  <th>Ciudad</th>
                  <th>Tipo Documento</th>
                  <th>Numero Documento</th>
                  <th>Fecha Nacimiento</th>
                  <th>Situacion Laboral</th>
                  <th>Telefono</th>
                  <th>Actualizar</th>
                </tr>
              </thead>
              <tbody>
                  
                  <tr>
                    <td>@Model.migrante.Nombre</td>
                    <td>@Model.migrante.Apellido</td>
                    <td>@Model.migrante.Correo</td>
                    <td>@Model.migrante.Direccion</td>
                    <td>@Model.migrante.PaisOrigen</td>
                    <td>@Model.migrante.Ciudad</td>
                    <td>@Model.migrante.TipoDoc</td>
                    <td>@Model.migrante.Documento</td>
                    <td>@Model.migrante.FechaNacimiento</td>
                    <td>@Model.migrante.SituacionLaboral</td>
                    <td>@Model.migrante.Telefono</td>
                    <td>
                        <form>
                             <a class="btn btn-primary" asp-page="/Migrantes/ActualizarInformacion" asp-route-Id="@Model.migrante.Id" >Actualizar</a>                    
                         </form>
                    </td>
                  </tr>
                
              </tbody>
            </table>
          </div>
          <!-- /.card-body -->
        </div>
      </div>
    </div>
  </div>
</div>

