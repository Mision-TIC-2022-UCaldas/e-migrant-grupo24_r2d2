<form method="post">
    <div class="input-group mb-3">
        <input type="email" class="form-control" id="Correo" placeholder="Correo" name="Correo" required>
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-envelope"></span>
            </div>
        </div>
    </div>
    <div class="input-group mb-3">
        <input type="password" class="form-control" id="Contrasena" placeholder="Contraseña" name="Contrasena">
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-lock"></span>
            </div>
        </div>
    </div>
    <div>
        <button type="submit" class="btn btn-primary btn-block" style="background-color: #FB6A3B;"
            asp-page-handler="StartSession">
            Iniciar sesión
        </button>
    </div>
</form>


@if (Model.status == 2) {
      <div class="row">
        <div class="col-md-12">
            <div class="alert alert-danger alert-dismissible">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
              <h5><i class="icon fas fa-ban"></i>Mensaje</h5>
              @Model.message
            </div>
        </div>
      </div>
    } 