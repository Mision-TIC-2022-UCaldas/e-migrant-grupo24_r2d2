        <button type="submit" class="btn btn-primary" asp-page-handler="Add" style="background-color:#FB6A3B; ">Buscar
            Servicios</button>
    </div>
    <div>
        <button type="submit" class="btn btn-primary" asp-page-handler="Add" style="background-color:#FB6A3B; ">Consultar
            amigos</button>
    </div>
}

